<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="viewModel"
            type="com.example.aperture.player.PlayerViewModel" />
        <variable
            name="cur"
            type="String" />
        <variable
            name="dur"
            type="String" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/player_root"
        android:background="@color/black"
        tools:context=".player.MoviePlayer">

        <VideoView
            android:id="@+id/vv_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.movieName}"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/grey"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ib_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias=".15"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageButton
            android:id="@+id/ib_rewind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_gone"
            android:src="@drawable/ic_rewind"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ib_play"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/ib_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_gone"
            android:src="@drawable/ic_pause"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ib_forward"
            app:layout_constraintStart_toEndOf="@id/ib_rewind"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white"
            />

        <ImageButton
            android:id="@+id/ib_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_gone"
            android:src="@drawable/ic_forward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ib_play"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white"
            />

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:progress="@{viewModel.progress}"
            android:scaleX="1.07"
            android:scaleY="1.07"
            android:max="@{viewModel.duration}"
            android:progressBackgroundTint="@color/white"
            android:progressTint="@color/orange_dark"
            android:thumbTint="@color/orange_f"
            app:layout_constraintTop_toBottomOf="@id/ib_play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_time"
            app:layout_constraintVertical_bias=".8"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_time"
            android:text="@{@string/player_timer(cur,dur)}"
            android:textSize="10sp"
            android:textColor="@color/cardview_light_background"
            android:layout_marginEnd="3dp"
            app:layout_constraintTop_toTopOf="@id/seekbar"
            app:layout_constraintBottom_toBottomOf="@id/seekbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/seekbar"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>